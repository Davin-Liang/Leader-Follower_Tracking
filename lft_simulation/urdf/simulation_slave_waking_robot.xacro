<?xml version="1.0"?>

<robot name="leader_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="type" value="slave" />
    <xacro:property name="length_wheel" value="0.05" />
    <xacro:property name="radius_wheel" value="0.06" />
    <xacro:property name="PI" value="3.1415926"/>
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                    iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
    </xacro:macro>

    <link name="${type}_base_link">
        <visual>
            <geometry>
                <box size="0.2 .3 .1"/>
            </geometry>
            <origin rpy="0 0 ${PI/2}" xyz="0 0 0.05"/>  
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 .3 0.1"/>
            </geometry>
            <origin rpy="0 0 ${PI/2}" xyz="0 0 0.05"/>  
        </collision>
        <xacro:default_inertial mass="8.2"/>    
    </link>

    <link name="${type}_wheel_1">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>  
    </link>

    <link name="${type}_wheel_2">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>  
    </link>

    <link name="${type}_wheel_3">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>    
    </link>

    <link name="${type}_wheel_4">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>    
    </link>

    <joint name="${type}_base_to_wheel1" type="continuous">
        <parent link="${type}_base_link"/>
        <child link="${type}_wheel_1"/>
        <origin rpy="${-PI/2} 0 0" xyz="0.1 0.13 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <joint name="${type}_base_to_wheel2" type="continuous">
        <axis xyz="0 0 1" />
        <anchor xyz="0 0 0" />
        <limit effort="100" velocity="100" />
        <parent link="${type}_base_link"/>
        <child link="${type}_wheel_2"/>
        <origin rpy="${-PI/2} 0 0" xyz="-0.1 0.13 0"/>
    </joint>

    <joint name="${type}_base_to_wheel3" type="continuous">
        <parent link="${type}_base_link"/>
        <axis xyz="0 0 1" />
        <child link="${type}_wheel_3"/>
        <origin rpy="${-PI/2} 0 0" xyz="0.1 -0.13 0"/>
    </joint>

    <joint name="${type}_base_to_wheel4" type="continuous">
        <parent link="${type}_base_link"/>
        <axis xyz="0 0 1" />
        <child link="${type}_wheel_4"/>
        <origin rpy="${-PI/2} 0 0" xyz="-0.1 -0.13 0"/>
    </joint>

    <!-- IMU joint -->
    <joint name="${type}_imu_joint" type="fixed">
        <axis xyz="0 1 0" />
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <parent link="${type}_base_link"/>
        <child link="${type}_imu_link"/>
    </joint>

    <!-- IMU -->
    <link name="${type}_imu_link">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>

        <inertial>
            <mass value="1e-2" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>
    </link>

    <!-- gazebo插件设置相关 -->

    <gazebo reference="${type}_base_link">
        <material>Gazebo/Orange</material>
    </gazebo>

    <gazebo reference="${type}_wheel_1">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="${type}_wheel_2">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="${type}_wheel_3">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="${type}_wheel_4">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Drive controller -->
    <gazebo>
        <plugin name="${type}_mecanum_controller" filename="libgazebo_ros_planar_move.so">
            <ros>
                <!-- <namespace>/demo</namespace> -->
                <remapping>cmd_vel:=/${type}/cmd_vel</remapping>
                <remapping>odom:=/${type}/odom</remapping>
            </ros>

            <update_rate>100</update_rate>
            <publish_rate>100</publish_rate>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>false</publish_odom_tf>

            <leftFrontJoint>${type}_base_to_wheel1</leftFrontJoint>
            <rightFrontJoint>${type}_base_to_wheel3</rightFrontJoint>
            <leftRearJoint>${type}_base_to_wheel2</leftRearJoint>
            <rightRearJoint>${type}_base_to_wheel4</rightRearJoint>
            <wheelSeparation>0.26</wheelSeparation>
            <wheelDiameter>0.12</wheelDiameter>
        </plugin>
    </gazebo>

    <!-- imu控制 -->
    <gazebo reference="${type}_imu_link">
        <material>Gazebo/Orange</material>
        <gravity>true</gravity>
        <sensor name="imu_sensor" type="imu">
            <always_on>true</always_on>
            <update_rate>100</update_rate>
            <visualize>true</visualize>
            <topic>__default_topic__</topic>
            <plugin filename="libgazebo_ros_imu_sensor.so" name="${type}_imu_plugin">
                <topicName>/${type}/imu</topicName>
                <bodyName>${type}_imu_link</bodyName>
                <updateRateHZ>100.0</updateRateHZ>
                <gaussianNoise>0.0</gaussianNoise>
                <xyzOffset>0 0 0</xyzOffset>
                <rpyOffset>0 0 0</rpyOffset>
                <frameName>${type}_imu_link</frameName>
                <serviceName>default_service</serviceName>
                <alwaysOn>true</alwaysOn>
                <maxAngularVelocity>100.0</maxAngularVelocity>
                <noiseDensity>0.0</noiseDensity>
                <randomWalk>0.0</randomWalk>
                <ros>
                    <remapping>~/out:=/${type}/imu</remapping>
                </ros>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Livox-Mid360  -->
    <!-- <xacro:include filename="$(find ros2_livox_simulation)/urdf/mid360.xacro" />
    <xacro:mid360 name="livox_frame" parent="base_link" topic="/livox/lidar">
        <origin xyz="0 0.0 0.175" rpy="0 0 0"/>
    </xacro:mid360> -->

</robot>
